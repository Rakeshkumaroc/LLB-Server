// models/courseEnquiryAssignMaster.model.js

const mongoose = require("mongoose");

const courseEnquiryAssignMasterSchema = new mongoose.Schema(
  {
    adminNotes: {
      type: String,
      trim: true,
    },
    assignedBy: {
      type: mongoose.Schema.Types.ObjectId,
      ref: "User",
      required: true,
    },
    priorityId: {
      type: mongoose.Schema.Types.ObjectId,
      ref: "Priority",
    },
    isDeleted: {
      type: Boolean,
      default: false,
    },
  },
  { timestamps: true }
);

module.exports = mongoose.model("CourseEnquiryAssignMaster", courseEnquiryAssignMasterSchema);
